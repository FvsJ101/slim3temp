{% extends "templates/default.twig" %}

{% block content %}
    <h1>Contact</h1>
    <div class="row">
        <div class="offset4"></div>
        <div class="col-med-4">
            <form action="{{ path_for('contact') }}" method="post" name="contact_us">
                <div class="form-group{{ formErrors.name ? ' has-error' : '' }}">
                    <div class="controls">
                        <label for="name">Full Name:</label>
                        <input type="text" class="form-control" id="name" name="name"
                               data-validation-required-message="Please enter your name.">
                        {% if formErrors.name %}
                            <span class="help-block">{{ formErrors.name | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group{{ formErrors.phone ? ' has-error' : '' }}">
                    <div class="controls">
                        <label for="phone">Phone Number:</label>
                        <input type="tel" class="form-control" id="phone" name="phone"
                               data-validation-required-message="Please enter your phone number.">
                        {% if formErrors.phone %}
                            <span class="help-block">{{ formErrors.phone | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group{{ formErrors.email ? ' has-error' : '' }}">
                    <div class="controls">
                        <label for="email">Email Address:</label>
                        <input type="email" class="form-control" id="email" name="email"
                               data-validation-required-message="Please enter your email address.">
                        {% if formErrors.email %}
                            <span class="help-block">{{ formErrors.email | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group{{ formErrors.message ? ' has-error' : '' }}">
                    <div class="controls">
                        <label for="message">Message:</label>
                        <textarea rows="10" cols="100" class="form-control" id="message" name="message"
                                  data-validation-required-message="Please enter your message" maxlength="999"
                                  style="resize:none"></textarea>
                    </div>
                    {% if formErrors.message %}
                        <span class="help-block">{{ formErrors.message | first }}</span>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-primary">Contact us</button>
                {#SET THIS UP IN THE CSRFVIEWMIDDLEWARE SECTION FOR THE KEY#}
                {{ csrf.field | raw }}
            </form>
        </div>
    </div>
{% endblock %}